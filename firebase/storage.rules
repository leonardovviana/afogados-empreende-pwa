rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Comprovantes enviados pelos expositores (imagens até 6 MB)
    match /payment-proofs/{registrationId}/comprovantes/{fileName} {
      allow write: if request.resource.size < 6 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
      allow read: if request.auth != null;
    }

    // Boletos anexados pelo painel administrativo (PDF)
    match /boletos/{registrationId}/{fileName} {
      allow write: if request.auth != null
                   && request.resource.contentType == 'application/pdf';
      allow read: if request.auth != null;
    }

    // Demais caminhos bloqueados por padrão
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
